<div class="flex w-full min-h-dvh justify-center items-center">
    <div class="space-y-4 w-96">
        <h2 class="text-center text-4xl">Register page</h2>
        <form method="POST" action="/register" class="space-y-4">
            <label class="input input-bordered flex items-center gap-2">
                <span class="icon">person</span>
                <input type="text" class="grow" placeholder="Username" name="username" />
            </label>
            <label class="input input-bordered flex items-center gap-2">
                <span class="icon">key</span>
                <input type="password" class="grow" placeholder="Password" name="password" />
            </label>
            <label class="input input-bordered flex items-center gap-2">
                <span class="icon">key</span>
                <input type="password" class="grow" placeholder="Repeat password" name="repeatPassword" />
            </label>
            <button type="submit" class="btn btn-primary w-full">Register</button>
        </form>
        <a href="/login" class="link link-hover w-full text-center block">Go to login page</a>
    </div>
</div>
